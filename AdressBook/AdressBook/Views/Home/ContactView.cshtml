@model ContactViewModel
@{
    ViewData["Title"] = "Contact Page";
}

<div class="container mt-3">
    <h2>Adress Book</h2>
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>Contact</th>
                <th>Attribut</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>First name</td>
                <td>@Model.FirstName</td>
            </tr>
            <tr>
                <td>Last name</td>
                <td>@Model.LastName</td>
            </tr>
            <tr>
                <td>Adress</td>
                <td>@Model.Adress</td>
            </tr>
            <tr>
                <td>Date of birth</td>
                <td>@Html.DisplayFor(c => c.DateOfBirth)</td>
            </tr>
            <tr>
                <td>Phone number</td>
                <td>@Model.PhoneNumber</td>
            </tr>
            <tr>
                <td>Email</td>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <td>Comment</td>
                <td>@Model.Comment</td>
            </tr>
        </tbody>
    </table>
    <div class="mb-3 mt-3">
        <form asp-controller="Home" asp-action="Delete" asp-route-id=@Model.Id method="post">
            <button type="submit" class="btn btn-danger">Delete contact</button>
        </form>
    </div>
    <div class="mb-3 mt-3">
        <form asp-controller="Home" asp-action="Edit" asp-route-id=@Model.Id method="get">
            <button type="submit" class="btn btn-primary">Edit contact</button>
        </form>
    </div>
</div>
